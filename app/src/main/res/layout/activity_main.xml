<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/main"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@id/rela"
            android:layout_height="@dimen/_100sdp">
            <TextView
                android:layout_width="wrap_content"
                android:text=" Hello Daniel"
                android:textColor="#000"
                android:fontFamily="@raw/product"
                android:layout_centerVertical="true"
                android:id="@+id/name"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textSize="@dimen/_25sdp"
                android:layout_height="wrap_content"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="59dp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_minus5sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_height="59dp"
                android:src="@drawable/ic_launcher_background"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_below="@+id/rela"
            android:layout_marginTop="@dimen/_minus17sdp"
            android:id="@+id/contactRecyclerView"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/card_bg"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/card"
            android:layout_below="@+id/contactRecyclerView"
            android:layout_height="@dimen/_95sdp">
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:src="@drawable/ic_plane"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_height="@dimen/_50sdp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:id="@+id/balance_bg"
                android:background="@drawable/card_wallet"
                android:paddingRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Your Balance"
                    android:fontFamily="@raw/product"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="NGN1000"
                android:textColor="#000"
                android:fontFamily="@raw/product"
                android:textSize="@dimen/_25sdp"
                android:id="@+id/balance"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/balance_bg"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Tap to Fund"
                android:fontFamily="@raw/product"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_below="@+id/card"
            app:cardElevation="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_150sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:text="SoundPay"
                    android:fontFamily="@raw/product"
                    android:textAllCaps="false"
                    android:id="@+id/soundPay"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_45sdp"/>
                <Button
                    android:text="SoundReceive"
                    android:fontFamily="@raw/product"
                    android:textAllCaps="false"
                    android:layout_below="@+id/soundPay"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_45sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="View History"
                    android:fontFamily="@raw/product"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="SoundPay V1.0"
        android:fontFamily="@raw/product"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textSize="@dimen/_10sdp"
        android:layout_height="wrap_content"/>
</RelativeLayout>